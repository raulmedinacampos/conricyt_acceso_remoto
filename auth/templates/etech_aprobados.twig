{% extends 'master.twig' %}

{% block js %}
<script type="text/javascript">
$(document).ready(function(){
	$('#userlist').on('click', '.approve', function(event){
		event.preventDefault();
		var id = $(event.target).parent().parent().siblings('.identifier').text();
		$.post(
			'registration.php',
			{'verify' : id},
			function(data){
				console.log(data);
				if(data == 'false'){
					noty({
						text : 'Not Successful',
						timeout : 2000,
						layout : 'topRight'
					});
				} else {
					$(event.target).parent().hide();
					noty({
						text : 'Success',
						timeout : 2000,
						layout : 'topRight'
					});
				}
			}
		);
	});

	$('#userlist').on('click', '.reject', function(event){
		event.preventDefault();
		var id = $(event.target).parent().parent().siblings('.identifier').text();
		$.post(
			'registration.php',
			{'reject' : id},
			function(data){
				console.log(data);
				if(data == 'false'){
					noty({
						text : 'Not Successful',
						timeout : 2000,
						layout : 'topRight'
					});
				} else {
					$(event.target).parent().parent().parent().hide();
					noty({
						text : 'Success',
						timeout : 2000,
						layout : 'topRight'
					});
				}
			})
	})
	$('#userlist').on('click', '.suspend', function(event){
		event.preventDefault();
		var id = $(event.target).parent().parent().siblings('.identifier').text();
		var req_data = {'suspend' : id}
		if($(event.target).attr('id')=== 'un'){
			req_data = {
				'suspend' : id,
				'un' : true
			}
		}
		$.post(
			'registration.php',
			req_data,
			function(data){
				console.log(data);
				if(data == 'false'){
					noty({
						text : 'Not Successful',
						timeout : 2000,
						layout : 'topRight'
					});
				} else {
					if($(event.target).attr('id')=== 'un'){
						$(event.target).text('Suspend').removeAttr('id');
					} else {
						$(event.target).text('Unsuspend').attr('id', 'un');
					}
					noty({
						text : 'Success',
						timeout : 2000,
						layout : 'topRight'
					});
				}
			});
	})
});
</script>
{% endblock %}

